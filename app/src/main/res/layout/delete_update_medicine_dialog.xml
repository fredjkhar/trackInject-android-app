<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGradientCenter">


    <TextView
        android:id="@+id/medicineNameTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="#272932"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:text=""
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/nOfPillsPerPackage"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/medicineNameTV"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textAllCaps="false"
        android:textColor="#272932"
        android:textSize="20sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/nOfPillsPerDose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#272932"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:layout_marginBottom="3dp"
        android:layout_below="@id/nOfPillsPerPackage" />

    <TextView
        android:id="@+id/nOfDosesPerDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textStyle="normal"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#272932"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:layout_marginBottom="3dp"
        android:layout_below="@id/nOfPillsPerDose" />

    <TextView
        android:id="@+id/notificationsTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nOfDosesPerDay"
        android:layout_marginBottom="3dp"
        android:fontFamily="sans-serif-light"
        android:text=""
        android:textAlignment="textStart"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textAllCaps="false"
        android:textColor="#272932"
        android:textSize="20sp"
        android:textStyle="normal" />

    <ListView
        android:id="@+id/listViewTimes"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/notificationsTV"
        android:layout_marginBottom="3dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listViewTimes"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/deleteMedicineButton"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/layout_edit_text_1"
            android:alpha="0.7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete" />
    </RelativeLayout>



</RelativeLayout>