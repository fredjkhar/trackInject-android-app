<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF5F2"
    android:orientation="vertical">


    <EditText
        android:id="@+id/addInjectionLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:ems="10"
        android:hint="site name"
        android:inputType="textPersonName"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="sans-serif-light"
        android:textColorHint="#272932"
        android:textSize="22sp"
        android:textStyle="normal"/>

    <EditText
        android:id="@+id/addInjectionLocationNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.7"
        android:ems="10"
        android:hint="site number"
        android:inputType="number"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:fontFamily="sans-serif-light"
        android:textColorHint="#272932"
        android:textSize="22sp"
        android:textStyle="normal" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addInjectionButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:alpha="0.7"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/layout_edit_text_1"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:text="add"
        android:textAllCaps="false"
        android:textColorHint="#272932"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:textStyle="bold" />
</LinearLayout>