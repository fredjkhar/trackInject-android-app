<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registerLayout"
    android:background="@drawable/gradient_animation"
    tools:context=".authentication.RegisterActivity">




    <TextView
        android:id="@+id/medNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:text="t r a c k I n j e c t"
        android:textColor="#272932"
        android:textSize="42sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:text="register"
        android:textColor="#272932"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medNameTxt" />

    <EditText
        android:id="@+id/firstNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:hint="first name"
        android:inputType="text"
        android:minWidth="120dp"
        android:drawableStart="@drawable/ic_action_first_last_name_logo"
        android:minHeight="45dp"
        android:paddingStart="5dp"
        android:text=""
        android:textAllCaps="false"
        android:textColorHint="#272932"
        android:textSize="22sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/lastNameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:background="@drawable/layout_edit_text_1"
        android:drawableStart="@drawable/ic_action_first_last_name_logo"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:hint="last name"
        android:inputType="text"
        android:minWidth="120dp"
        android:minHeight="45dp"
        android:paddingStart="5dp"
        android:text=""
        android:textColorHint="#272932"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstNameEditText" />

    <EditText
        android:id="@+id/emailEditTextRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:background="@drawable/layout_edit_text_1"
        android:drawableStart="@drawable/ic_action_email_logo"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:minWidth="120dp"
        android:minHeight="45dp"
        android:paddingStart="5dp"
        android:text=""
        android:textColorHint="#272932"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastNameEditText" />


    <EditText
        android:id="@+id/passwordEditTextRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:hint="password"
        android:inputType="textPassword"
        android:minWidth="120dp"
        android:minHeight="45dp"
        android:paddingStart="5dp"
        android:drawableStart="@drawable/ic_action_password_logo"
        android:text=""
        android:textColorHint="#272932"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditTextRegister" />

    <EditText
        android:id="@+id/repeatPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:alpha="0.7"
        android:background="@drawable/layout_edit_text_1"
        android:ems="10"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:gravity="center_vertical"
        android:hint="repeat password"
        android:inputType="textPassword"
        android:minWidth="120dp"
        android:minHeight="45dp"
        android:paddingStart="5dp"
        android:text=""
        android:drawableStart="@drawable/ic_action_open_password_logo"
        android:textColorHint="#272932"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passwordEditTextRegister" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registerButtonRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="60dp"
        android:alpha="0.7"
        android:background="@drawable/layout_edit_text_1"
        android:fontFamily="@font/alegreya_sans_sc_light"
        android:minWidth="100dp"
        android:minHeight="50dp"
        android:text="register"
        android:textAllCaps="false"
        android:textColorHint="#272932"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/repeatPasswordEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>